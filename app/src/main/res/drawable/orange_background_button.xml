<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/vermillion" />
            <gradient android:angle="-90" android:startColor="@color/vermillion" android:endColor="@color/vermillion"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/vermillion" />
            <solid android:color="@color/vermillion"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/vermillion" />
            <gradient android:angle="-90" android:startColor="@color/vermillion" android:endColor="@color/vermillion" />
        </shape>
    </item>
</selector>