<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TableItemList"
    android:background="@drawable/common_back"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/back_icon"
            android:layout_width="50dp"
            android:layout_height="60dp"
            app:lottie_autoPlay="true"
            android:layout_marginTop="10sp"
            app:lottie_colorFilter="@color/purple_500"
            app:lottie_fileName="back-icon.json"
            app:lottie_loop="true"/>

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginStart="50dp"
            android:text="back"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:src="@drawable/prof_icon"
                app:civ_border_color="#000080"
                app:civ_border_overlay="true"
                app:civ_border_width="2dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_below="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_table_number"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/number1"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_corner_white"
                        android:gravity="center"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/txt_table_number"
                        android:id="@+id/txt_tablename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Table Name"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_toEndOf="@+id/txt_table_number"
                        android:id="@+id/txt_taken"
                        android:layout_below="@+id/txt_tablename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="taken by"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_toEndOf="@+id/txt_table_number"
                        android:id="@+id/txt_date"
                        android:layout_below="@+id/txt_taken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date and Time"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_toEndOf="@+id/txt_table_number"
                        android:id="@+id/txt_status"
                        android:layout_below="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/txt_cost"
                        android:layout_below="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹ 1000"
                        android:textSize="14sp"
                        android:layout_marginEnd="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_below="@id/linear2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/textview_border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="Item Name"
                android:layout_marginStart="10dp" />
            <TextView
                android:id="@+id/item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:text="1" />
            <TextView
                android:id="@+id/txt_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:text="₹ 100" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:text="Order Complete" />

        </LinearLayout>



    </RelativeLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_gravity="bottom|right"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30sp"
            android:src="@drawable/check"
            app:maxImageSize="30sp"
            android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
