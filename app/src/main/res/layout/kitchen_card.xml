<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:cardCornerRadius="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_table_number"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/number1"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_corner_white"
                        android:gravity="center"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/txt_table_number"
                        android:id="@+id/txt_tablename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Table Name"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_toEndOf="@+id/txt_table_number"
                        android:id="@+id/txt_taken"
                        android:layout_below="@+id/txt_tablename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="taken by"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_toEndOf="@+id/txt_table_number"
                        android:id="@+id/txt_date"
                        android:layout_below="@+id/txt_taken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date and Time"
                        android:textSize="14sp"
                       />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/txt_date"
                        android:layout_marginBottom="10dp"
                        android:layout_toEndOf="@+id/txt_table_number"
                        >
                        <TextView
                            android:id="@+id/txt_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textSize="14sp"
                          />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end">
                            <Button
                                android:id="@+id/btn_accept"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="20dp"
                                android:text="Accept"
                                android:textAllCaps="false"
                                tools:ignore="HardcodedText"
                                android:textSize="12sp"
                                android:background="@drawable/button_capsule_green_color"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>

                        </RelativeLayout>


                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>