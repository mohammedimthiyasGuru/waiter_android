<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TableItemListActivity"
    android:background="@drawable/common_back"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/back_icon"
                android:layout_width="50dp"
                android:layout_height="60dp"
                app:lottie_autoPlay="true"
                android:layout_marginTop="10sp"
                app:lottie_colorFilter="@color/purple_500"
                app:lottie_fileName="back-icon.json"
                app:lottie_loop="true"/>

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginStart="50dp"
                android:text="@string/admin_request"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:src="@drawable/prof_icon"
                app:civ_border_color="#000080"
                app:civ_border_overlay="true"
                app:civ_border_width="2dp" />

        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear3"
        android:layout_below="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_admin_request_list"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/txt_norecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:visibility="gone"/>
    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/purple_700"
        app:indicatorName="LineSpinFadeLoaderIndicator" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        app:maxImageSize="30dp"
        android:layout_alignParentRight="true"
        tools:ignore="ContentDescription,RtlHardcoded" />


</RelativeLayout>
