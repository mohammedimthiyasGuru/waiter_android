<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:id="@+id/transaction_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/prof_icon"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txt_transactionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Money transaction"
                    android:layout_marginStart="70dp"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    tools:ignore="RelativeOverlap" />
                <TextView
                    android:id="@+id/txt_transactionContent"
                    android:layout_below="@+id/txt_transactionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mohammad"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:layout_marginStart="70dp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:id="@+id/txt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD 1000"
                    android:layout_alignParentEnd="true"
                    android:textSize="12sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_amount"
                    android:text="Nov 06"
                    android:layout_alignParentEnd="true"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_date"
                    android:text="Successful"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/purple_700"
                    android:layout_marginEnd="10dp"
                    tools:ignore="HardcodedText"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>