<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:id="@+id/ll_root"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_request_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="message "
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"

                        />
                    <TextView
                        android:id="@+id/txt_request_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="message message message message messagemessage  message message message"
                        android:textColor="@color/medium_green"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"

                        />
                    <TextView
                        android:id="@+id/txt_request_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="message message message message messagemessage  message message message"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/ll_response_details">
                        <TextView
                            android:id="@+id/txt_response_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Date"
                            android:textColor="@color/red"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                        <TextView
                            android:id="@+id/txt_response_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:text="Date"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp"
                            android:maxLines="1"/>
                    </LinearLayout>

                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:id="@+id/btnnotificationsdelete"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/ic_baseline_close_24"
                        android:layout_marginRight="20dp"
                        android:visibility="gone"/>
                </RelativeLayout>
            </LinearLayout>









        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>